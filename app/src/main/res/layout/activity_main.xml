<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/style_textview"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="@string/zero"
        android:textSize="48sp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <LinearLayout
        android:id="@+id/first_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_weight="1" >
        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/default_button"
            android:textSize="24dp"
            android:text="AC" />
        <Button
            android:id="@+id/min_plus"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="±"
            />
        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="%"
            />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:background="@color/operation_background"
            android:text="÷"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/_7"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="7" />
        <Button
            android:id="@+id/_8"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="8"
            />
        <Button
            android:id="@+id/_9"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="9"
            />

        <Button
            android:id="@+id/mult"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="@color/operation_background"
            android:text="×"
            android:textSize="24dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/_4"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="4" />
        <Button
            android:id="@+id/_5"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="5"
            />
        <Button
            android:id="@+id/_6"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="6"
            />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="@color/operation_background"
            android:text="-"
            android:textSize="24dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourth_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/_1"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="1" />
        <Button
            android:id="@+id/_2"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="2"
            />
        <Button
            android:id="@+id/_3"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="3"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="@color/operation_background"
            android:text="+"
            android:textSize="24dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifth_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/_0"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="30"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text="0" />
        <Button
            android:id="@+id/comma"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="24dp"
            android:text=","
            />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="@color/operation_background"
            android:text="="
            android:textSize="24dp" />
    </LinearLayout>

</LinearLayout>